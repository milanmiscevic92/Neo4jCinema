@model Neo4jCinema.Models.MovieListViewModel
@{
    ViewBag.Title = "Movies - Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Administration - Movies</title>
</head>
<body class="h-100" style="background-image: url('../../Content/Backgrounds/MovieBackground.jpg');">
    <div class="container d-flex h-100">
        <div class="row align-self-center w-100" style="margin-top:30px;">
            <div class="col-md-10 mx-auto">
                <div class="card text-white" style="background-color: rgba(70, 70, 70, 0.5);">
                    <div class="card-header">
                        <h5>All Movies</h5>
                    </div>
                    <div class="card-body">
                        <div class="card-text">
                            <!-- Movies table -->
                            <table class="table table-hover table-dark hoverTableColor">
                                <thead style="border-bottom:2px solid white;">
                                    <tr>
                                        <th scope="col" style="border-top:0px; border-bottom:0px;">Movie Name</th>
                                        <th scope="col" style="border-top:0px; border-bottom:0px;">Genre</th>
                                        <th scope="col" style="border-top:0px; border-bottom:0px;">Director</th>
                                        <th scope="col" style="border-top:0px; border-bottom:0px;">Release Year</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in Model.Movies)
                                    {
                                    <tr>
                                        <td style="border-top:0px; border-bottom:1px solid white;">@Html.ActionLink(i.MovieName, "EditMovie", new { i.MovieId }, new { @class = "actionLinkLeft" })</td>
                                        <td style="border-top:0px; border-bottom:1px solid white;">@i.MovieGenre</td>
                                        <td style="border-top:0px; border-bottom:1px solid white;">@i.MovieDirector</td>
                                        <td style="border-top:0px; border-bottom:1px solid white;">@i.ReleaseYear</td>


                                        @using (Html.BeginForm("DeleteMovie", "Movie"))
                                        {
                                            @Html.Hidden("MovieId", i.MovieId)
                                            <td class="text-right" style="border-top:1px solid white; border-bottom:1px solid white;">
                                                <input type="submit" value="Delete" class="actionInput deleteButton" />
                                            </td>
                                        }
                                    </tr>

                                    }
                                </tbody>
                            </table>
                            <!-- Movies table ending -->

                            <div class="text-right">
                                @Html.ActionLink("Create new movie", "CreateMovie", "Movie", null, new { @class = "btn btn-success", @style = "margin-top:10px;" })
                            </div>
                        </div>
                    </div>
                </div>






            </div>

        </div>
    </div>
</body>






</html>