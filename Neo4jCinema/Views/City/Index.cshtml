@model Neo4jCinema.Models.CityListViewModel

@{
    ViewBag.Title = "Cities - Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Administration - Cities</title>
</head>
<body class="h-100" style="background-image: url('../../Content/Backgrounds/CityBackground.jpg');">
    <div class="container d-flex h-100">
        <div class="row align-self-center w-100" style="margin-top:30px;">
            <div class="col-md-10 mx-auto">
                <div class="card text-white" style="background-color: rgba(70, 70, 70, 0.5);">
                    <div class="card-header">
                        <h5>All cities</h5>
                    </div>
                    <div class="card-body">
                        <div class="card-text">
                            <!-- Cities table -->
                            <table class="table table-hover table-dark hoverTableColor">
                                <thead style="border-bottom:2px solid white;">
                                    <tr>
                                        <th scope="col" style="border-top:0px; border-bottom:0px;">City Name</th>
                                        <th scope="col" style="border-top:0px; border-bottom:0px;">Zip Code</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in Model.Cities)
                                    {
                                    <tr>
                                        <td style="border-top:0px; border-bottom:1px solid white;">@Html.ActionLink(i.Name, "EditCity", new { i.CityId }, new { @class = "actionLinkLeft" })</td>
                                        <td style="border-top:0px; border-bottom:1px solid white;">@i.Zip</td>
                                        @using (Html.BeginForm("DeleteCity", "City"))
                                        {
                                            @Html.Hidden("CityId", i.CityId)
                                            <td class="text-right" style="border-top:1px solid white; border-bottom:1px solid white;">
                                                <input type="submit" value="Delete" class="actionInput deleteButton" />
                                            </td>
                                        }
                                    </tr>

                                    }
                                </tbody>
                            </table>
                            <!-- Cities table ending -->
                            
                            <div class="text-right">
                                @Html.ActionLink("Create new city", "CreateCity", "City", null, new { @class = "btn btn-success", @style="margin-top:10px;" })
                            </div>
                        </div>
                    </div>
                </div>






            </div>

        </div>
    </div>
</body>
</html>