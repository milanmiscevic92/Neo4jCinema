@model Domain.Entities.Actor

@{
    ViewBag.Title = "Edit Actor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html class="h-100">
<head>
    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Edit Actor</title>
   
</head>
<body class="h-100" style="background-image: url('../../Content/Backgrounds/ActorBackground.jpg');">
    <div class="container d-flex h-100">
        <div class="row align-self-center w-100">

            <div class="col-md-6 mx-auto">

                <div class="card text-white" style="background-color: rgba(70, 70, 70, 0.5);">
                    <div class="card-header">
                        <h5>Edit Actor</h5>
                    </div>
                    @using (Html.BeginForm("EditActor", "Actor", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="card-body">
                            <div class="card-text">

                                @Html.HiddenFor(a => a.ActorId)
                                <div class="row">
                                    <div class="col">
                                        <label>First Name</label>
                                        @Html.TextBoxFor(a => a.ActorFirstName, new { @class = "form-control" })
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col">
                                        <label>Last Name</label>
                                        @Html.TextBoxFor(a => a.ActorLastName, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <label>Biography</label>
                                        @Html.TextAreaFor(a => a.Biography, new { @class = "form-control", @rows = 5 })
                                    </div>
                                </div>

                                <div class="row" style="margin-top:15px;">
                                    <div class="col">
                                        <input type="submit" value="Save" class="btn btn-block btn-success" />
                                    </div>

                                    <div class="col">
                                        @Html.ActionLink("Cancel", "Index", "Actor", null, new { @class = "btn btn-block btn-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>


























