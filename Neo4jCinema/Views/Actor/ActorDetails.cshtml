@model Neo4jCinema.Models.ActorDetailsViewModel

@{
    ViewBag.Title = "ActorDetails";
    Layout = "~/Views/Shared/_UserHomeLayout.cshtml";
}

<html>
<head>
    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Actor.ActorFullName - Details</title>
</head>

<body class="h-100" style="background-image: url('../../Content/Backgrounds/ActorBackground.jpg');">
    <div class="container d-flex h-100">
        <div class="row align-self-center w-100" style="margin-top:30px;">
            <div class="col-md-10 mx-auto">
                <div class="card text-white" style="background-color: rgba(70, 70, 70, 0.5);">
                    <div class="card-header text-center">
                        <h5>@Model.Actor.ActorFullName</h5>
                    </div>
                    <div class="card-body">
                        <div class="card-text">
                            <div class="row">
                                <div class="col text-center">
                                    <p class="card-text">Actor Name: @Model.Actor.ActorFullName</p>
                                    <p class="card-text">Biography: @Model.Actor.Biography</p>
                                </div>
                            </div>

                            <div class="row" style="margin-top:20px;">
                                <div class="col text-center">
                                    <p>Starring In: </p>
                                    <ul class="list-group list-group-item-dark" style="border-radius:4px;">
                                        @foreach (var m in Model.ActorsMovies)
                                        {
                                            if (m != null)
                                            {
                                                <li class="list-group-item bg-light">@m.MovieName</li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>

                            
                        </div>
                    </div>
                </div>






            </div>

        </div>
    </div>
</body>






</html>

