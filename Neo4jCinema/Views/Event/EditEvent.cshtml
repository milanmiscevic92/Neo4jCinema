@model Neo4jCinema.Models.EditEventViewModel
@using Domain.Entities

@{
    ViewBag.Title = "Edit Event";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html class="h-100">
<head>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Edit Actor</title>

</head>
<body class="h-100" style="background-image: url('../../Content/Backgrounds/EventBackground.jpg');">
    <!-- Code to wire up your DatePicker -->
    <script type="text/javascript">
        $(function () {
            // This will make every element with the class "date-picker" into a DatePicker element
            $('.date-picker').datepicker();
        })
    </script>

    <div class="container d-flex h-100">
        <div class="row align-self-center w-100">

            <div class="col-md-6 mx-auto">

                <div class="card text-white" style="background-color: rgba(70, 70, 70, 0.5);">
                    <div class="card-header">
                        <h5>Edit Event</h5>
                    </div>
                    @using (Html.BeginForm("EditEvent", "Event", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="card-body">
                            <div class="card-text">

                                @Html.HiddenFor(e => e.Ev.EventId)
                                <div class="row">
                                    <div class="col">
                                        <label>Event Name</label>
                                        @Html.TextBoxFor(e => e.Ev.EventName, new { @class = "form-control" })
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col">
                                        <label>Location</label>
                                        @Html.DropDownListFor(e => e.SelectedCinemaId, new SelectList(Model.CinemasSelectList, "Value", "Text", Model.CurrentCinemaId), "-Choose Option-", new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <label>Description</label>
                                        @Html.TextAreaFor(e => e.Ev.EventDescription, new { @class = "form-control", @rows = 5 })
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <label>Event Start </label>

                                        @Html.TextBoxFor(e => e.Ev.EventStartTime, "{0:M/d/yyyy}", new { @class = "date-picker form-control" })
                                    </div>
                                </div>

                                <div class="row" style="margin-top:15px;">
                                    <div class="col">
                                        <input type="submit" value="Save" class="btn btn-block btn-success" />
                                    </div>

                                    <div class="col">
                                        @Html.ActionLink("Cancel", "Index", "Event", null, new { @class = "btn btn-block btn-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>










