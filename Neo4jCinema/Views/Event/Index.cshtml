@model Neo4jCinema.Models.EventListViewModel


@{
    ViewBag.Title = "Events - Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Administration - Events</title>
</head>
<body class="h-100" style="background-image: url('../../Content/Backgrounds/EventBackground.jpg');">
    <div class="container d-flex h-100">
        <div class="row align-self-center w-100" style="margin-top:30px;">
            <div class="col-md-10 mx-auto">


                <div class="card text-white" style="background-color: rgba(70, 70, 70, 0.5);">
                    <div class="card-header">
                        <h5>All Events</h5>
                    </div>
                    <div class="card-body">
                        <div class="card-text">
                            <!-- Events table -->
                            <table class="table table-hover table-dark hoverTableColor">
                                <thead style="border-bottom:2px solid white;">
                                    <tr>
                                        <th scope="col" style="border-top:0px; border-bottom:0px;">Event Name</th>
                                        <th scope="col" style="border-top:0px; border-bottom:0px;">Location</th>
                                        <th scope="col" style="border-top:0px; border-bottom:0px;">Date</th>
                                        <th scope="col" style="border-top:0px; border-bottom:0px;">Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in Model.Events)
                                    {
                                    <tr>
                                        <td style="border-top:0px; border-bottom:1px solid white;">@Html.ActionLink(i.EventName, "EditEvent", new { i.EventId }, new { @class = "actionLinkLeft" })</td>
                                        <td style="border-top:0px; border-bottom:1px solid white;">@i.EventLocation</td>
                                        <td style="border-top:0px; border-bottom:1px solid white;">@i.EventStartTime.ToShortDateString()</td>
                                        <td style="border-top:0px; border-bottom:1px solid white;">@i.EventDescription</td>


                                        @using (Html.BeginForm("DeleteEvent", "Event"))
                                        {
                                            @Html.Hidden("EventId", i.EventId)
                                            <td class="text-right" style="border-top:1px solid white; border-bottom:1px solid white;">
                                                <input type="submit" value="Delete" class="actionInput deleteButton" />
                                            </td>
                                        }
                                    </tr>

                                    }
                                </tbody>
                            </table>
                            <!-- Events table ending -->

                            <div class="text-right">
                                @Html.ActionLink("Create new event", "CreateEvent", "Event", null, new { @class = "btn btn-success", @style = "margin-top:10px;" })
                            </div>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>
</body>
</html>

