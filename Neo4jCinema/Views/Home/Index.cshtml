@model Neo4jCinema.Models.SignInViewModel

@{
    ViewBag.Title = "Neo4j Cinema";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!DOCTYPE html>

<html class="h-100">
<head>
    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Neo4j Cinema</title>
</head>
<body class="h-100" style="background-image: url('../../Content/Backgrounds/CinemaBackground.jpg');">
    <div class="container d-flex h-100">
        <div class="row align-self-center w-100">

            <div class="col-md-6 mx-auto">
                 @using (Html.BeginForm("SignIn", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                 {
                <div class="card text-white" style="background-color: rgba(70, 70, 70, 0.5);">
                    <div class="card-header">
                        <h5>Sign In</h5>
                    </div>
                    <div class="card-body">
                        <div class="card-text">
                            <div class="form-group">
                                <label>Username</label>
                                @Html.TextBoxFor(u => u.Username, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                @Html.TextBoxFor(u => u.Password , new { @class = "form-control", type="password" })
                            </div>

                        </div>
                        <div class="card-footer" >
                            <button type="submit" class="btn btn-block btn-danger">Sign In</button>
                        </div>
                    </div>
                </div>
                 }
                </div>

        </div>
    </div>
</body>
</html>